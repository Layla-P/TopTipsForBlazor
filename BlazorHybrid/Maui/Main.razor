<Router AppAssembly="@typeof(Main).Assembly" AdditionalAssemblies="new[] {typeof(BlazorHybrid.App.Client.App).Assembly}">
	<Found Context="routeData">
		<RouteView RouteData="@routeData" DefaultLayout="@typeof(BlazorHybrid.App.Client.Shared.MainLayout)" />
        <FocusOnNavigate RouteData="@routeData" Selector="h1" />
	</Found>
	<NotFound>
		<LayoutView Layout="@typeof(BlazorHybrid.App.Client.Shared.MainLayout)">
			<p role="alert">Sorry, there's nothing at this address.</p>
		</LayoutView>
	</NotFound>
</Router>

<Router AppAssembly="@GetType().Assembly" AdditionalAssemblies="new[] {typeof(BlazorHybrid.App.Client.App).Assembly}">
	<Found Context="routeData">
		<RouteView RouteData="@routeData" DefaultLayout="@typeof(BlazorHybrid.App.Client.Shared.MainLayout)" />
	</Found>
	<NotFound>
		<LayoutView Layout="@typeof(BlazorHybrid.App.Client.Shared.MainLayout)">
			<p>Sorry, there's nothing at this address.</p>
		</LayoutView>
	</NotFound>
</Router>
